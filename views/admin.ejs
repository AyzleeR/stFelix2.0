<main class="desktop">
    <section class="index">
        <h3>Modification de la page d'accueil</h3>
        <h4>Modification des photos du carrousel</h4>
        <form action="/addcarrouselpicture" method="post" class="form" enctype="multipart/form-data">
            <% for (let i = 0; i < 5; i++) { %>
              <input class="field picture" type="file" id="carrousel<%= i %>" name="carrousel<%= i %>">
            <% } %>
            <input class="button" type="submit" value="Ajout">
          </form>

        <h4>Modification du texte d'accueil</h4>
        <form action="/updateindextext" method="post">
          <textarea id="indexText" name="indexText"></textarea>
        </form>
    </section>
</main>